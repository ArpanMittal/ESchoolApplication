<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/testListDisp"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background1withlogo"
    tools:context="com.organization.sjhg.e_school.Content.Test.ActiveTestActivity">

    <FrameLayout android:id="@+id/frameLayout2" android:layout_width="fill_parent"
        android:layout_height="125px" android:layout_alignParentRight="true">

        <TextView android:id="@+id/helloUser" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="right|top"
            android:layout_marginRight="50px" android:layout_marginTop="35px"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="20px"
            android:textStyle="bold" />

        <TextView android:id="@+id/date" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left|top"
            android:layout_marginLeft="50px" android:layout_marginTop="40px"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="20px" />


        <TextView android:id="@+id/testAvailableLabel" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="40px" />

    </FrameLayout>


    <ScrollView android:id="@+id/scrollTestAvailable" android:layout_width="fill_parent"
        android:layout_height="280px" android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" android:layout_below="@+id/frameLayout2"
        android:fillViewport="false">

        <LinearLayout android:id="@+id/linearTestAvailable" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <ImageView android:id="@+id/chalk" android:layout_width="150px" android:layout_height="100px"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
        android:layout_gravity="left|bottom" android:paddingLeft="50px"
        android:src="@drawable/chalk" />

    <ImageView android:id="@+id/duster" android:layout_width="150px" android:layout_height="100px"
        android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom" android:paddingRight="40px"
        android:src="@drawable/duster" />

    <ImageView android:id="@+id/connectwithteacher" android:layout_width="80px"
        android:layout_height="80px" android:layout_alignTop="@+id/chalk"
        android:layout_marginBottom="35px" android:layout_marginLeft="110px"
        android:layout_marginRight="20px" android:layout_toRightOf="@+id/chalk"
        android:src="@drawable/connectwithteacherwithname" />
    <ImageView android:id="@+id/raisehand" android:layout_width="80px" android:layout_height="80px"
        android:layout_alignTop="@+id/chalk" android:layout_marginBottom="35px"
        android:layout_marginRight="20px" android:layout_toEndOf="@+id/chalk"
        android:layout_toRightOf="@+id/connectwithteacher"
        android:src="@drawable/raisehandwithname" />
    <ImageView android:id="@+id/chat" android:layout_width="80px" android:layout_height="80px"
        android:layout_alignTop="@+id/chalk" android:layout_marginBottom="35px"
        android:layout_marginRight="20px" android:layout_toEndOf="@+id/chalk"
        android:layout_toRightOf="@+id/raisehand" android:src="@drawable/chatwithname" />
    <ImageView android:id="@+id/writenotes" android:layout_width="80px" android:layout_height="80px"
        android:layout_alignTop="@+id/chalk" android:layout_marginBottom="35px"
        android:layout_marginRight="20px" android:layout_toEndOf="@+id/chalk"
        android:layout_toRightOf="@+id/chat" android:src="@drawable/writenoteswithname" />
    <ImageView android:id="@+id/sync" android:layout_width="80px" android:layout_height="80px"
        android:layout_alignTop="@+id/chalk" android:layout_marginBottom="35px"
        android:layout_toEndOf="@+id/chalk" android:layout_toRightOf="@+id/writenotes"
        android:src="@drawable/syncwithname" />


</RelativeLayout><!-- From: file:/F:/TechPartners/Sjhgs/classroom/E-School/Student/src/main/res/layout/activity_active_test.xml -->