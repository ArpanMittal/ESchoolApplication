

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_top_parent_padding"
        android:background="@drawable/button_background"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/img_android"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/analysis_icon"
            android:layout_alignBottom="@+id/linear"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_toEndOf="@+id/img_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/list_top_parent_padding"
            android:paddingStart="@dimen/list_top_parent_padding"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_android"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/answers_icon"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/btn"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/horizontalLine"
            android:background="@color/dim_foreground_light_inverse" />

    </RelativeLayout>
