<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/time_taken"
        android:scrollbars="horizontal|vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeTaken"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="@dimen/labels_text_size"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/timer"
                android:id="@+id/time_taken"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/labels_text_size"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question"
                android:orientation="vertical">

                <com.organization.sjhg.e_school.Utils.ImageViewHelper
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/question_image"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:scaleType="matrix" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_text"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textSize="17sp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:textColor="@color/darkest_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/list_top_padding"
                        android:text="@string/useroption"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textSize="14sp"
                        android:id="@+id/user_option_text"
                        android:textColor="@color/darkest_gray"
                        android:padding="@dimen/activity_vertical_margin"

                        />

                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solution_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/labels_text_size"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/list_top_padding"
                            android:text="@string/correctanswer"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:textSize="14sp"
                            android:padding="@dimen/activity_vertical_margin"
                            android:id="@+id/answer_text"
                            android:textColor="@color/darkest_gray"
                            android:paddingRight="@dimen/list_top_padding"
                            />

                        </LinearLayout>
                        <com.organization.sjhg.e_school.Utils.ImageViewHelper
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/solution_image"
                            android:scaleType="matrix"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/cardView_user_option"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="@dimen/activity_vertical_margin">-->
                   <!---->
                <!--</android.support.v7.widget.CardView>-->

                <!---->
            <!--</LinearLayout>-->



        </LinearLayout>
    </ScrollView>

</LinearLayout>