<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingRight="@dimen/list_top_padding"
        android:id="@+id/time_taken"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/time_taken"
        android:scrollbars="horizontal|vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question"
                android:orientation="vertical">

                <com.organization.sjhg.e_school.Utils.ImageViewHelper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_image"
                    android:scaleType="matrix"
                    />
                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/question_text"
                        android:textSize="17sp"
                        android:paddingRight="@dimen/list_top_padding"
                        android:layout_below="@+id/question_image"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/list_top_padding"
                            android:text="@string/correctanswer"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textSize="14sp"
                        android:id="@+id/answer_text"
                        android:paddingRight="@dimen/list_top_padding"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_user_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/list_top_padding"
                        android:text="@string/useroption"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textSize="14sp"
                        android:paddingRight="@dimen/list_top_padding"
                        android:id="@+id/user_option_text" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <com.organization.sjhg.e_school.Utils.ImageViewHelper
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/solution_image"
                    android:scaleType="matrix"
                    />
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>